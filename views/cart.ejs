<%- include('./partials/header') %>
    <div class="w-full h-screen flex px-20 py-20 gap-10">
        <% if(user.cart.length > 0) { %>
        <div class="cart min-h-600 overflow-auto w-[75%] flex gap-10 flex-wrap">
            <% user.cart.forEach((item) => { %> 
                <div class="wrounded-md overflow-hidden">
                    <div class="relative w-full flex items-center justify-center h-60 bg-[<%= item.bgcolor %>]">
                        <img class="h-[12rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
                                alt="">
                        <a href="/cart/delete/<%= item._id %>"><img class="absolute top-5 right-5 w-7 h-7" src="https://img.icons8.com/?size=100&id=99971&format=png&color=000000" alt=""></a>
                    </div>
                    <div class="w-full flex justify-between items-center gap-2 px-5 py-4 bg-[<%= item.panelcolor %>]">
                        <h3 class="text-1xl"> <%= item.name %></h3>
                        <div class="flex items-center gap-1">
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                        </div>
                </div>
            </div>
            <% }) %>
        </div>
        
        <div class="w-[25%]">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-5 mt-5 w-full">
                <div class="flex mt-2 justify-between">
                    <h4 class="w-1/2">Total MRP</h4>
                    <h4>₹ <%= bill %></h4>
                </div>
                <div class="flex mt-2 justify-between">
                    <h4 class="w-1/2">Discount on MRP</h4>
                    <h4>₹ <%= discount %></h4>
                </div>
                <div class="flex mt-2 justify-between">
                    <h4 class="w-1/2">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2 justify-between">
                    <h4 class="w-1/2">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex px-5 mt-5 justify-between">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= (bill+20 - discount) %></h3>
            </div>
            <form action=""></form>
        </div>
        <% } else { %>
            <div class="m-auto text-zinc-500 text-2xl">Cart is empty</div>
        <% } %>
    </div>
    <%- include('./partials/footer') %>